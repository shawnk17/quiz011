@model IEnumerable<quizLibrary.Question>

@{
    ViewBag.Title = "Index";
}

<br />
<h4> @ViewBag.QuizTitle | Questions</h4>

<p>
    @Html.ActionLink("Create New Question", "Create", new { quizId = ViewBag.QuizId })
</p>
<table class="table">
    <tr>
        <th>
            Questions
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>

            <td>
                @Html.DisplayFor(modelItem => item.Content)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.QuestionId }) |
                @Html.ActionLink("Details", "Details", new { id = item.QuestionId }) |
                @Html.ActionLink("Answers", "../Answers/Index", new { questionId = item.QuestionId }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.QuestionId })
            </td>
        </tr>
    }

</table>

<div>
    @Html.ActionLink("Back to Quizzes", "../QuizWebApp/Index")
</div>
